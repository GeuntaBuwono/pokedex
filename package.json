{
  "name": "pokedex",
  "version": "0.0.1",
  "engines": {
    "node": ">=16",
    "yarn": "v1",
    "npm": "v9"
  },
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "android:clean": "cd android && ./gradlew clean && cd -",
    "start:clear": "watchman watch-del-all && yarn start --reset-cache",
    "watch:test": "jest --watch --config ./jest.config.ts",
    "test": "jest --config ./jest.config.ts",
    "test:clear": "jest --config ./jest.config.ts --clearCache",
    "test:update": "jest -u --config ./jest.config.ts",
    "test:coverage": "jest --coverage --config ./jest.config.ts",
    "check:lint": "eslint --ignore-path .gitignore .",
    "check:prettier": "prettier --config .prettierrc.js ./src/ --check",
    "check:dead-ts": "ts-unused-exports tsconfig.json --exitWithCount --ignoreTestFiles styled-components.ts",
    "check:ts": "tsc --noEmit",
    "checker": "yarn tsc && yarn check:lint && yarn test && yarn check:prettier && yarn check:dead-ts",
    "format:lint": "eslint --fix ./src/",
    "format:prettier": "prettier --config .prettierrc.js ./src/ --write",
    "formatter": "yarn format:lint && yarn format:prettier",
    "prepare": "husky install",
    "postinstall": "npx jetifier"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn formatter"
    ]
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "dependencies": {
    "@gorhom/bottom-sheet": "^4",
    "@react-navigation/native": "^6.1.2",
    "@react-navigation/native-stack": "^6.9.8",
    "@shopify/flash-list": "^1.4.0",
    "@tanstack/react-query": "^4.22.4",
    "axios": "^1.2.3",
    "i18next": "^22.4.9",
    "jotai": "^1.13.1",
    "react": "18.2.0",
    "react-i18next": "^12.1.4",
    "react-native": "0.71.1",
    "react-native-gesture-handler": "^2.9.0",
    "react-native-mmkv": "^2.6.1",
    "react-native-reanimated": "^2.14.4",
    "react-native-safe-area-context": "^4.5.0",
    "react-native-screens": "^3.19.0",
    "styled-components": "^5.3.6",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/runtime": "^7.20.13",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/jest-native": "^5.4.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "^11.5.0",
    "@tsconfig/react-native": "^2.0.3",
    "@types/jest": "^29.2.6",
    "@types/react": "^18.0.27",
    "@types/react-native": "^0.71.0",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.26",
    "@types/styled-components-react-native": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "babel-jest": "^29.3.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.32.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-styled-components": "^7.1.1",
    "lint-staged": "^13.1.0",
    "metro-react-native-babel-preset": "0.74.1",
    "msw": "^0.49.3",
    "prettier": "^2.8.3",
    "react-test-renderer": "^18.2.0",
    "ts-node": "^10.9.1",
    "ts-unused-exports": "^9.0.2",
    "typescript": "^4.9.4"
  }
}
